{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    /* Base Options: */
    "allowJs": true,

    /* Strictness */
    "checkJs": true,

    /* Bundled projects */
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "./dist",
    /* "include": ["src"],
    "exclude": ["node_modules"] */
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
